{
  "name": "slidev",
  "homepage": "https://gitlab.com/internal-developer-platform/slidev",
  "private": true,
  "scripts": {
    "prebuild": "sh clean-slides.sh",
    "build": "concurrently --max-processes 20 --timings true 'yarn:build:*'",
    "build:backstage": "slidev build slides-backstage.md --out backstage",
    "build:gitops": "slidev build slides-gitops.md --out gitops",
    "build:kubernetes": "slidev build slides-kubernetes.md --out kubernetes",
    "build:wiremock": "slidev build slides-wiremock.md --out wiremock",
    "build:channels": "slidev build slides-channels.md --out channels",
    "build:mobile": "slidev build slides-mobile.md --out mobile",
    "build:site-reliability-engineering": "slidev build slides-site-reliability-engineering.md --out site-reliability-engineering",
    "build:spring-batch": "slidev build slides-spring-batch.md --out spring-batch",
    "build:spring-boot": "slidev build slides-spring-boot.md --out spring-boot",
    "build:idp": "slidev build slides-idp.md --out idp",
    "netlify:backstage": "netlify deploy --dir backstage --build --prod --debug --site slidev-backstage --auth $NETLIFY_AUTH_TOKEN",
    "netlify:gitops": "netlify deploy --dir gitops --build --prod --debug --site slidev-gitops --auth $NETLIFY_AUTH_TOKEN",
    "netlify:kubernetes": "netlify deploy --dir kubernetes --build --prod --debug --site slidev-kubernetes --auth $NETLIFY_AUTH_TOKEN",
    "netlify:wiremock": "netlify deploy --dir wiremock --build --prod --debug --site slidev-wiremock --auth $NETLIFY_AUTH_TOKEN",
    "netlify:channels": "netlify deploy --dir channels --build --prod --debug --site slidev-channels --auth $NETLIFY_AUTH_TOKEN",
    "netlify:mobile": "netlify deploy --dir mobile --build --prod --debug --site slidev-mobile --auth $NETLIFY_AUTH_TOKEN",
    "netlify:site-reliability-engineering": "netlify deploy --dir site-reliability-engineering --build --prod --debug --site slidev-site-reliability-engineering --auth $NETLIFY_AUTH_TOKEN",
    "netlify:spring-batch": "netlify deploy --dir spring-batch --build --prod --debug --site slidev-spring-batch --auth $NETLIFY_AUTH_TOKEN",
    "netlify:spring-boot": "netlify deploy --dir spring-boot --build --prod --debug --site slidev-spring-boot --auth $NETLIFY_AUTH_TOKEN",
    "netlify:idp": "netlify deploy --dir idp --build --prod --debug --site slidev-idp --auth $NETLIFY_AUTH_TOKEN",
    "vercel:backstage": "netlify deploy --dir backstage --build --prod --debug --site slidev-backstage --auth $NETLIFY_AUTH_TOKEN",
    "vercel:gitops": "netlify deploy --dir gitops --build --prod --debug --site slidev-gitops --auth $NETLIFY_AUTH_TOKEN",
    "vercel:kubernetes": "netlify deploy --dir kubernetes --build --prod --debug --site slidev-kubernetes --auth $NETLIFY_AUTH_TOKEN",
    "vercel:wiremock": "netlify deploy --dir wiremock --build --prod --debug --site slidev-wiremock --auth $NETLIFY_AUTH_TOKEN",
    "vercel:channels": "netlify deploy --dir channels --build --prod --debug --site slidev-channels --auth $NETLIFY_AUTH_TOKEN",
    "vercel:mobile": "netlify deploy --dir mobile --build --prod --debug --site slidev-mobile --auth $NETLIFY_AUTH_TOKEN",
    "vercel:site-reliability-engineering": "netlify deploy --dir site-reliability-engineering --build --prod --debug --site slidev-site-reliability-engineering --auth $NETLIFY_AUTH_TOKEN",
    "vercel:spring-batch": "netlify deploy --dir spring-batch --build --prod --debug --site slidev-spring-batch --auth $NETLIFY_AUTH_TOKEN",
    "vercel:spring-boot": "netlify deploy --dir spring-boot --build --prod --debug --site slidev-spring-boot --auth $NETLIFY_AUTH_TOKEN",
    "vercel:idp": "netlify deploy --dir idp --build --prod --debug --site slidev-idp --auth $NETLIFY_AUTH_TOKEN",
    "dev:backstage": "slidev slides-backstage.md",
    "dev:gitops": "slidev slides-gitops.md",
    "dev:kubernetes": "slidev slides-kubernetes.md",
    "dev:wiremock": "slidev slides-wiremock.md",
    "dev:channels": "slidev slides-channels.md",
    "dev:mobile": "slidev slides-mobile.md",
    "dev:site-reliability-engineering": "slidev slides-site-reliability-engineering.md",
    "dev:spring-batch": "slidev slides-spring-batch.md",
    "dev:spring-boot": "slidev slides-spring-boot.md",
    "plop": "plop",
    "deploy:netlify": "concurrently --max-processes 1 --timings true 'yarn:netlify:*'",
    "deploy:vercel": "concurrently --max-processes 1 --timings true 'yarn:vercel:*'",
    "deploy:github": "npm run build"
  },
  "dependencies": {
    "@slidev/cli": "^0.49.29",
    "@slidev/theme-default": "latest",
    "@slidev/theme-seriph": "latest",
    "slidev-addon-excalidraw": "^1.0.4",
    "slidev-component-poll": "^3.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "gh-pages": "^6.3.0",
    "plop": "^4.0.1",
    "prettier": "^3.5.3",
    "prettier-plugin-slidev": "^1.0.5",
    "shiki": "^1.23.1",
    "wrangler": "^4.6.0"
  },
  "slidev": {
    "addons": [
      "slidev-addon-excalidraw"
    ]
  },
  "overrides": [
    {
      "files": [
        "slides.md",
        "slides/*.md",
        "slides/**/*.md"
      ],
      "options": {
        "parser": "slidev",
        "plugins": [
          "prettier-plugin-slidev"
        ]
      }
    }
  ]
}